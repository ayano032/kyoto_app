<h1>Editing Book</h1>
<%= form_for(@post, url: post_path) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Caption</h4>
  <%= f.text_area :caption %>
  <%= f.submit 'Update Book' %>
  <% if flash[:notice] %>
   <div class="flash">
    <%=flash[:notice] %>
    </div>
    <% end %>
<%= link_to "Show", post_path(@post.id) %>
<%= link_to "Back",posts_path %>

<% end %>