<h1>投稿編集</h1>
<%= form_for(@post, url: post_path) do |f| %>
<div class="row">
    <div class="col-sm-12">
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Caption</h4>
  <%= f.text_area :caption,rows:'5', class: "form-control" %>
  
  <%= f.submit '変更する',class: "btn btn-danger" %>
  
<%= link_to "詳細", post_path(@post.id) %>
<%= link_to "戻る",posts_path %>

<% end %>
</div>
</div>