<div class="main">
　  
    <%  @all_ranks.each.with_index(1) do |post, i| %>
     　<div class="media">
     　  <h1>第<%= i %>位&ensp;&ensp;<%= post.title %></h1>
        	<a class="media-left" href="#">
        		<%= attachment_image_tag post, :image, size: '400x300' %>
        	</a>
        	<div class="media-body">
        		<h2 class="media-heading">Caption:<%=post.caption %>
        		<br>
        		<br><% if user_signed_in? %>
            <%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %>
            <% if post.favorited_by?(current_user) %>
                <%= link_to post_favorites_path(post), method: :delete  do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= post.favorites.count %> いいね
                <% end %>
            <% else %>
            　　<%= link_to post_favorites_path(post), method: :post  do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: gray;"></i>
                <%= post.favorites.count %> いいね
                <% end %>
    　　      <% end %>
            <% else %>
            <i class="fa fa-heart-o"></i>
            <%= post.favorites.count %> いいね
            <% end %>
            </h2>
        	</div>
        </div>
        
　  <% end %>
</div>
