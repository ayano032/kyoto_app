<div class="container">
    <div class="row">
      <div class="col-xs-3">
<h1>User info</h1>
<div class="profile-container">

</div>
<table class="table table-striped">
  <td><%= link_to users_path do %><%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", size: '100x100' %><% end %></td>
  <td><h3 class="profile-name"><%= @user.name %></h3></td>
<tr>
  <td><h3 class="introduction"><%= @user.introduction %></h3></td>
</tr>
<tr>
  <td>
    <h3 class="following">フォロー
     <%= link_to  following_user_path(@user.id) do %>
      <%= @user.followings.count %>
    <% end %>
      </h3>
  </td>
</tr>
<tr>
<td><h3 class="followers">フォロワー
  <%= link_to followers_user_path(@user.id) do %>
  <%= @user.followers.count %>
  <% end %>
  </h3></td>
</tr>
</table>
 <%= link_to "", edit_user_path(@user), class: "btn col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>





<h1>Users</h1>
<tr>
<% @users.each do |user| %>
<tr>
<td>

<td>name</td>
<td><%=user.name %>
<td><%= link_to 'Show', user_path(user.id) %>
</td>
<td><% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'フォローを外す', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'フォローする', class: 'btn btn-primary btn-block' %>

  <% end %>
<% end %></td>
<% end %>
</tr>
</table>
</div>
</div>
</div>
<% end %>