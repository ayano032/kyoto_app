
<h1>User info</h1>
<div class="profile-container">
 <%= link_to user_path do %><%= attachment_image_tag @user, :profile_image,fallback: "/no_image.jpg", class: "img-circle pull-left profile-thumb", size: '60x60' %>
 <% end %>
</div>
<table class="table table-striped">
  <td><h3 class="profile-name"><%= @user.name %></h3></td>
<tr>
  <td><h3 class="introduction"><%= @user.introduction %></h3></td>
</tr>
</table>


