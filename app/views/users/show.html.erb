<div class="mypage">
<h1>マイページ</h1>
<div class="profile-container">
 <%= link_to user_path do %><%= attachment_image_tag @user, :profile_image,fallback: "/no_image.jpg", class: "img-circle pull-left profile-thumb", size: '150x150' %>
 <% end %>
</div>
<table class="table table-striped">
  <td><h3 class="profile-name"><%= @user.name %></h3></td>
<tr>
  <td><h3 class="introduction"><%= @user.introduction %></h3></td>
</tr>
<tr>
  <td>
    <h3 class="following">フォロー
     <%= link_to  following_user_path(@user.id) do %>
      <%= @user.followings.count %>
    <% end %>
      </h3>
  </td>
</tr>
<tr>
<td><h3 class="followers">フォロワー
  <%= link_to followers_user_path(@user.id) do %>
  <%= @user.followers.count %>
  <% end %>
  </h3></td>
</tr>
</table>
<%= link_to "", edit_user_path(@user), class: "btn col-xs-12 btn btn-default glyphicon glyphicon-cog" %>
</div>
