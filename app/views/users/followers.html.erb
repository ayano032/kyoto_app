<div class="conteiner">
  <div class="row">

      <div class="col-xs-offset-1 col-xs-10">
          <h2>フォロワー</h2>


          <% if @users.nil? %>
         <span>ユーザーはいません</span>

        <% else%>

           <table class="table">

              <thead>
                <tr>
                    <th>image</th>
                    <th>name</th>
                </tr>
              </thead>

              <tbody>
                <% @users.each do |user|%>
                <tr>
                    <td>
                       <%= attachment_image_tag(user, :profile_image, fallback: "temple.png", size: '100x100') %>
                    </td>
                    <td><%= user.name %></td>
                    <td>
                        <span>フォロー数：</span>
                        <%= user.followings.count %>
                    </td>
                    <td>
                        <span>フォロワー数：</span>
                        <%= user.followers.count %>
                    </td>
                    <td>
                        <%= link_to 'show', user_path(user) %>
                    </td>
                </tr>
                <% end %>
              </tbody>

           </table>

           <% end %>


    </div>

  </div>
</div>